<div class="container mt-5">
  <form action="/nutrition/search" method="post">
    <div class="input-group mb-3">
      <input 
        type="text" 
        class="form-control" 
        name="search"
        placeholder="Look up a food, values are per 100g serving of food" 
        aria-label="Look up a food" 
      >
      <div class="input-group-append">
        <button class="btn btn-secondary" type="submit">Search</button>
      </div>
    </div>
  </form>
</div>

<div class="container-fluid mt-5 px-5 row">
  <% foods.forEach( food => {%> 
      <form action="/nutrition/add-food" method="post" class="my-5 mx-3 py-5 col-md-3 border rounded bg-light">

        <h5 class="text-center mb-3"><%= food.description  %></h5>

        <div class="form-row">
          <div class="col-lg-6 mb-3 form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value= "<%= food.description %>" class="form-control" readonly>
          </div>
          <div class="form-group col-lg-6 mb-3">
            <label for="serving" class=>Serving</label>
            <div class="input-group">
              <input type="number" id="serving" name="serving" value="100" class="form-control ">
              <div class="input-group-append">
                <span class="input-group-text">G</span>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group mb-3 row">
          <label for="protein">Protein</label>
          <div class="input-group col-lg-3">
            <input type="text" class="form-control" id="protein" name="protein" value="<%= food.foodNutrients[0].value %> " readonly>
            <div class="input-group-append">
              <span class="input-group-text"><%= food.foodNutrients[0].unitName  %> </span>
            </div>
          </div>
        </div>

        <div class="form-group mb-3 row">
          <label for="fat">Fat</label>
          <div class="input-group col-lg-3">
            <input type="text" class="form-control" id="fat" name="fat" value="<%= food.foodNutrients[1].value %> " readonly>
            <div class="input-group-append">
              <span class="input-group-text"><%= food.foodNutrients[1].unitName  %> </span>
            </div>
          </div>
        </div>

        <div class="form-group mb-3 row">
          <label for="carbohydrate">Carbohydrate</label>
          <div class="input-group col-lg-3">
            <input type="text" class="form-control" id="carbohydrate" name="carbohydrate" value="<%= food.foodNutrients[2].value %> " readonly>
            <div class="input-group-append">
              <span class="input-group-text"><%= food.foodNutrients[2].unitName  %> </span>
            </div>
          </div>
        </div>

        <div class="form-group mb-3 row">
          <label for="calories">Calories</label>
          <div class="input-group col-lg-3">
            <input type="text" class="form-control" id="calories" name="calories" value="<%= food.foodNutrients[3].value %> " readonly>
            <div class="input-group-append">
              <span class="input-group-text"><%= food.foodNutrients[3].unitName  %> </span>
            </div>
          </div>
        </div>

        <div class="d-grid gap-2 col-6 mx-auto mt-5">
          <button type="submit" class="btn btn-secondary btn-lg">Add food</button>
        </div>

      </form>

  <% }) %> 
</div>
<script src="/public/js/main.js"></script>