<!-- login modal -->
<div class="modal fade" id="login-modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered ">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLabel">Login</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body my-2">
        <%- include('./partials/_messages') %> 
        <!-- login form -->
        <form action="/user/login" method="get">
          <div class="form-group">
            <label for="email">Email Address</label>
            <input 
              type="email" 
              class="form-control mb-3" 
              id="email" name="email" 
              placeholder="name@email.com" 
              value="<%= typeof email != 'undefined' ? email : '' %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input 
              type="password" 
              class="form-control mb-3" 
              id="password" 
              name="password" 
              value="<%= typeof password != 'undefined' ? password : '' %>"
              required
            />
          </div>
          <div class="form-group d-grid gap-2">
            <button type="submit" class="btn btn-secondary btn-lg mt-2">
              Login
            </button>
            <span class="text-center">
              - or -
            </span>
            <a href="/auth/google" class="btn btn-outline-dark btn-lg">
              Continue with <i class="bi bi-google"></i>oogle 
            </a>
          </div>
        </form>
      </div>
      <div class="modal-footer d-flex flex-column">
        <span>Not a member? <a href="/user/register">Sign Up</a></span>
      </div>
    </div>
  </div>
</div>